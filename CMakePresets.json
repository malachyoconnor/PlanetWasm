{
  "version": 6,
  "configurePresets": [
    {
      "name": "native",
      "displayName": "Native Desktop",
      "binaryDir": "${sourceDir}/build-native",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "EMSDK": "/home/mali/Packages/emsdk"
      }
    },
    {
      "name": "wasm-debug",
      "displayName": "WebAssembly (Emscripten)",
      "binaryDir": "${sourceDir}/build-wasm-debug",
      "toolchainFile": "/opt/qt6-wasm/lib/cmake/Qt6/qt.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "Qt6_DIR": "/opt/qt6-wasm/lib/cmake/Qt6",
        "QT_HOST_PATH": "/usr"
      },
      "environment": {
        "EMSDK": "/home/mali/Packages/emsdk"
      }
    },
      {
      "name": "wasm-release",
      "displayName": "WebAssembly (Emscripten)",
      "binaryDir": "${sourceDir}/build-wasm-release",
      "toolchainFile": "/opt/qt6-wasm/lib/cmake/Qt6/qt.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "Qt6_DIR": "/opt/qt6-wasm/lib/cmake/Qt6",
        "QT_HOST_PATH": "/usr",
        "CMAKE_CXX_FLAGS": "-Oz -flto",
        "CMAKE_C_FLAGS": "-Oz -flto",
        "CMAKE_EXE_LINKER_FLAGS": "-Oz -flto --closure 1 -sEVAL_CTORS"
      },
      "environment": {
        "EMSDK": "/home/mali/Packages/emsdk",
        "EM_BINARYEN_ROOT": "/usr"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "native",
      "configurePreset": "native"
    },
    {
      "name": "wasm-release",
      "configurePreset": "wasm-release"
    },
    {
      "name": "wasm-debug",
      "configurePreset": "wasm-debug"
    }
  ]
}
