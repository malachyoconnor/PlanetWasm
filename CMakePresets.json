{
    "version": 6,
    "configurePresets": [
        {
            "name": "native",
            "displayName": "Native Desktop",
            "binaryDir": "${sourceDir}/build-native",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "wasm",
            "displayName": "WebAssembly (Emscripten)",
            "binaryDir": "${sourceDir}/build-wasm",
            "toolchainFile": "/opt/qt6-wasm/lib/cmake/Qt6/qt.toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "Qt6_DIR": "/opt/qt6-wasm/lib/cmake/Qt6",
                "QT_HOST_PATH": "/usr"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "native",
            "configurePreset": "native"
        },
        {
            "name": "wasm",
            "configurePreset": "wasm"
        }
    ]
}
